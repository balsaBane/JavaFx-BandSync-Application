<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="AnchPane" prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CredentialsController">
    <children>
        <StackPane layoutY="-1.0" prefHeight="408.0" prefWidth="510.0">
            <children>
                <ImageView fitHeight="410.0" fitWidth="510.0" opacity="0.5" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../img/introBackground.jpg" />
                    </image>
                    <effect>
                        <GaussianBlur />
                    </effect> 
                </ImageView>
                <Pane prefHeight="200.0" prefWidth="200.0">
                    <children>
                        <ImageView fx:id="logoView" fitHeight="105.0" fitWidth="456.0" layoutX="30.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="img/logo.png" />
                            </image>
                        </ImageView>
                    </children>
                </Pane>
            </children>
        </StackPane>
        <Pane fx:id="mainPane" layoutX="13.0" layoutY="119.0" prefHeight="286.0" prefWidth="485.0">
            <children>
                <Label layoutX="75.0" layoutY="20.0" prefHeight="25.0" prefWidth="159.0" text="Name of the band:">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="bandNameField" layoutX="265.0" layoutY="20.0" prefHeight="25.0" />
                <Label layoutX="75.0" layoutY="55.0" prefHeight="25.0" prefWidth="159.0" text="Host:">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label layoutX="75.0" layoutY="90.0" prefHeight="25.0" prefWidth="159.0" text="Database name:">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label layoutX="75.0" layoutY="125.0" prefHeight="25.0" prefWidth="159.0" text="Database user:">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label layoutX="75.0" layoutY="160.0" prefHeight="25.0" prefWidth="159.0" text="Database pass:">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label layoutX="75.0" layoutY="195.0" prefHeight="25.0" prefWidth="159.0" text="Database port:">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="hostField" layoutX="265.0" layoutY="55.0" prefHeight="25.0" />
                <TextField fx:id="databaseNameField" layoutX="265.0" layoutY="90.0" prefHeight="25.0" />
                <TextField fx:id="databaseUserField" layoutX="265.0" layoutY="125.0" prefHeight="25.0" />
                <TextField fx:id="databasePassField" layoutX="265.0" layoutY="160.0" prefHeight="25.0" />
                <TextField fx:id="portField" layoutX="265.0" layoutY="195.0" prefHeight="25.0" text="3306" />
                <ImageView fx:id="back" fitHeight="33.0" fitWidth="29.0" layoutX="14.0" layoutY="17.0" onMousePressed="#mouseClicked" onMouseReleased="#mouseReleased" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="img/back.png" />
                    </image>
                </ImageView>
                <Button fx:id="saveButton" layoutX="208.0" layoutY="237.0" mnemonicParsing="false" onMousePressed="#mouseClicked" onMouseReleased="#mouseReleased" text="Add the band"  />
            </children>
            <effect>
                <ColorAdjust />
            </effect>
        </Pane>
    </children>
</AnchorPane>
